<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        html {
            height: 100%;
            width: 100%;
        }
    </style>
    <title>@ViewData["Title"] - hotel_management</title>
</head>

<body class="bg-slate-200 h-full flex flex-col">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tailwindcss.com"></script>

    <header class="text-white bg-blue-900 flex flex-row justify-between py-6 m-2 px-4 rounded-xl drop-shadow-xl">
        <h1 class="">Hotelaria</h1>
        <button class="px-2 py-1 outline outline-1 outline-offset-1 transition-all ease-in-out hover:outline hover:outline-offset-2 hover:outline-2 hover:outline rounded">Login</button>  
    </header> 

    <div class="flex flex-row h-full w-full mx-auto p-4 space-x-4">
        <div class="h-full w-fit p-4 bg-slate-50 rounded-xl drop-shadow-xl">
            <h1 class="text-xl pb-4 font-bold">Options</h1>
            <ul>
                <li><a href="/" target="_blank">> Check-In</a></li>
                <li><a href="/" target="_blank">> Rooms</a></li>
                <li><a href="/" target="_blank">> Reservations</a></li>
            </ul>
        </div>
        <div class="grow h-full bg-slate-50 rounded-xl drop-shadow-xl">
            <main role="main" class="m-4">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
